<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".controller.activity.MainActivity">


    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/main_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RadioButton
            android:text="聊天"
            android:id="@+id/main_chat"
            android:textSize="20sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/main_bottom_bg_selector"
            android:textColor="@color/main_bottom_textcolor_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="联系人"
            android:id="@+id/main_contactor"
            android:textSize="20sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/main_bottom_bg_selector"
            android:textColor="@color/main_bottom_textcolor_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="设置"
            android:id="@+id/main_settings"
            android:textSize="20sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/main_bottom_bg_selector"
            android:textColor="@color/main_bottom_textcolor_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </RadioGroup>

</LinearLayout>
